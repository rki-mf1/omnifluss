
params {
    modules_testdata_base_path = 'https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/'
}

process {

    withName: KMA_INDEX {
        ext.args = '-Sparse'
    }

    withName: KMA {
        ext.args = '-1t1 -t 2 -mrs 0.9 -mem_mode -mq 50 -and -Sparse'
    }

    withName: SEQKIT_GREP {
        ext.args = '-n'
        ext.prefix  = { "${meta.id}.topRef" }
    }

}