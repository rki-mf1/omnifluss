nextflow_workflow {
    name "Test Subworkflow BAM_SAMTOOLS_STATS_ALL"
    script "../main.nf"
    // Incude a nextflow.config for the test if needed
    config "subworkflows/local/bam_samtools_stats_all/tests/nextflow.config"
    workflow "BAM_SAMTOOLS_STATS_ALL"

    //  Add tags for the subworkflow
    tag "subworkflows"
    tag "subworkflows/local"
    tag "subworkflows/bam_samtools_stats_all"
    // Add tags for all modules used within this subworkflow
    tag "samtools"

    test("sarscov2  - stub") {

        options '-stub'

        when {
            workflow {
                """
                input[0] = Channel.of([
                [id:'test'],
                file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/bam/test.paired_end.bam', checkIfExists: true)
                ])
                input[1] = Channel.of([
                [id:'test_ref'],
                file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta', checkIfExists: true)
                )]
                input[2] = Channel.of([
                [id:'test_ref'],
                file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta.fai', checkIfExists: true)
                )]
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }

    test("sarscov2") {

        when {
            workflow {
                """
                input[0] = Channel.of([
                [id:'test'],
                file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/bam/test.paired_end.bam', checkIfExists: true)
                ])
                input[1] = Channel.of([
                [id:'test_ref'],
                file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta', checkIfExists: true)
                )]
                input[2] = Channel.of([
                [id:'test_ref'],
                file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta.fai', checkIfExists: true)
                )]
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }
}