nextflow_workflow {

    name "Test Subworkflow FASTA_PROCESS_REFERENCE_ALL"
    script "../main.nf"
    // Incude a nextflow.config for the test if needed
    config "subworkflows/local/fasta_process_reference_all/tests/nextflow.config"
    workflow "FASTA_PROCESS_REFERENCE_ALL"

    //  Add tags for the subworkflow
    tag "subworkflows"
    tag "subworkflows/local"
    tag "subworkflows/fasta_process_reference_all"
    tag "fasta_process_reference_all"
    // Add tags for all modules used within this subworkflow.
    tag "samtools_faidx"

    // Test name preferably indicating the test-data and file-format used
    test("sarscov2 - single_end - stub") {

        // Activate the stub mode for nextflow
        options '-stub'

        when {
            workflow {
                """
                input[0] = Channel.value([[id:"dummy_file"],"$projectDir/assets/dummy_file.txt"])
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }

    test("sarscov2 - paired_end - stub") {

        // Activate the stub mode for nextflow
        options '-stub'

        when {
            workflow {
                """
                input[0] = Channel.value([[id:"dummy_file"],"$projectDir/assets/dummy_file.txt"])
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }
}