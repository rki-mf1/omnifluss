    test ("extract from empty read input - illumina paired end [fastq]") {
        // SARS-CoV-2 Kraken2 DB + Bacteroides fragilis reads + SARS-CoV-2 tax ID
        setup {
            run("UNTAR") {
                script "../../../untar/main.nf"
                process {
                    """
                    input[0] = [ [id: 'test' ], file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/db/kraken2.tar.gz', checkIfExists: true)]
                    """
                }
            }
            run("KRAKEN2_KRAKEN2") {
                script "../../../kraken2/kraken2/main.nf"
                process {
                    """
                    input[0] = [ [id: 'test', single_end: false],
                        [
                            file(params.modules_testdata_base_path + 'genomics/prokaryotes/bacteroides_fragilis/illumina/fastq/test2_1.fastq.gz', checkIfExists: true),
                            file(params.modules_testdata_base_path + 'genomics/prokaryotes/bacteroides_fragilis/illumina/fastq/test2_2.fastq.gz', checkIfExists: true)
                        ]
                    ]
                    input[1] = UNTAR.out.untar.map{ it[1] }
                    input[2] = true
                    input[3] = true
                    """
                }
            }
        }

        when {
            process {
                """
                input[0] = 2697049
                input[1] = KRAKEN2_KRAKEN2.out.classified_reads_assignment
                input[2] = KRAKEN2_KRAKEN2.out.classified_reads_fastq
                input[3] = KRAKEN2_KRAKEN2.out.report
                """
            }
        }

        then {
            assertAll(
                // process fails
                { assert process.exitStatus == 1 },
                // Command fails with exit code 74
                { assert process.errorReport.contains("Command exit status:\n  74") },
                // And a specific error message
                { assert process.errorReport.contains("ERROR: sequence file's first line is blank") }
            )
        }
    }

    test ("non-empty read input files, but tax ID not present - illumina paired end [fastq]") {
        // SARS-CoV-2 Kraken2 DB + SARS-CoV-2 reads + E. coli tax ID
        setup {
            run("UNTAR") {
                script "../../../untar/main.nf"
                process {
                    """
                    input[0] = [ [id: 'test' ], file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/db/kraken2.tar.gz', checkIfExists: true)]
