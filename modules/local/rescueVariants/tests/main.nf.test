nextflow_process {

    name "Test Process RESCUE_VARIANTS"
    script "../main.nf"
    process "RESCUE_VARIANTS"
    config "./nextflow.config"

    tag "modules"
    tag "modules_local"
    tag "rescueVariants"

    test("influenza - vcf") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id: params.local_testdata_id ],
                    [ file(params.local_testdata_vcf, checkIfExists: true) ]
                ])
                """
            }
        }

        then {
            assertAll (
            { assert process.success },
            { assert snapshot(process.out).match() }
            )
        }
    }


    test("influenza - vcf - stub") {

        options '-stub'

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id: params.local_testdata_id ],
                    [ file(params.local_testdata_vcf, checkIfExists: true) ]
                ])
                """
            }
        }

        then {
            assertAll (
            { assert process.success },
            { assert snapshot(process.out).match() }
            )
        }
    }

}
