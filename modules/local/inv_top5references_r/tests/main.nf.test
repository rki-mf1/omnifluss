nextflow_process {

    name "Test Process TOP5_REFERENCES"
    script "../main.nf"
    config "modules/local/inv_top5references_r/tests/nextflow.config"
    process "TOP5_REFERENCES"

    tag "modules"
    tag "modules_local"
    tag "inv_top5references_r"
    tag "TOP5_REFERENCES"
    tag "reference"
    tag "selection"

    test("sarscov2 - paf") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    [ file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.paf', checkIfExists: true) ]
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    // TODO nf-core: Change the test name preferably indicating the test-data and file-format used but keep the " - stub" suffix.
    test("sarscov2 - paf - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    [ file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.paf', checkIfExists: true) ]
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
